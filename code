import random
mynum = random.randint(0,9)
print("I have a number in my mind (0-9).Can you guess it??")
while True:
    usernum = int(input("Enter your guess : "))
    if(mynum == usernum):
        print("HURRAHHH!! You are right ")
        break
    elif(mynum > usernum):
        print("My number is greater than the number you have entered .Try Again.")
    else:
        print("My number is smaller than the number you have entered.Try Again.")
